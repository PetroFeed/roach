#!/usr/bin/env node

/**
 * Module dependencies.
 */

var path = require('path');

var options = process.argv.slice(2)[0];
if (options) options = JSON.parse(options);

var roach = require('..')(options);

if (options && options.crawlers) {
  roach.scan( path.resolve(process.cwd(), options.crawlers) );
}